<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="card_contactlistview">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
    
    <style name="Label_Blue">
        <item name="android:textColor">@color/color_font_cyan_med</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Text_DarkGrey">
        <item name="android:textColor">@color/color_font_grey_dark</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    
    
    <!-- Image TextView Overlay Style -->
    <style name="TextView_ImageOverlay_OpaqueBg">
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:background">#80000000</item>
        <item name="android:textColor">@color/color_font_white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>

